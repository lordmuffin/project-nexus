{
  "name": "nexus",
  "version": "1.0.0",
  "description": "Project Nexus - AI-Powered Local Productivity Suite",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.0.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:full": "turbo run dev --parallel && pnpm run docker:up",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "start": "turbo run start --parallel",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:up:full": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml --profile full up -d",
    "docker:up:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml --profile dev up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "pnpm install && pnpm run build",
    "desktop": "pnpm --filter desktop dev",
    "web": "pnpm --filter nexus-web start",
    "backend": "pnpm --filter nexus-backend dev",
    "mobile": "pnpm --filter @nexus/mobile start",
    "transcription": "docker-compose up transcription-service"
  },
  "keywords": [
    "nexus",
    "productivity",
    "ai",
    "local",
    "transcription",
    "meetings",
    "chat"
  ],
  "author": "Project Nexus Team",
  "license": "MIT",
  "devDependencies": {
    "@turbo/gen": "^1.13.4",
    "turbo": "^1.13.4",
    "prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-jsx-a11y": "^6.5.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0 <25.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/nexus.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/nexus/issues"
  },
  "homepage": "https://github.com/your-username/nexus#readme",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.88"
  }
}